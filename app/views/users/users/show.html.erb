<h1>Profile</h1>
<h3>Name: <%= @user.first_name %> <%= @user.last_name %></h3>
<p>
  <%= @user.email %> <br>
  <%= @user.cell_phone %>
</p>
<h3>Address: </h3>
<p><%= @user.street_1 %></p>
<p><%= @user.street_2 %></p>
<p><%= @user.city %>, <%= @user.state %> <%= @user.zip_code %></p>
<h4>Description</h4>
<p><%= @user.description %></p>
<% if current_user.id == @user.id %>
  <%= link_to "Edit Profile", edit_user_path(@user), role: 'button', class: 'btn btn-primary' %>
<% end %>
