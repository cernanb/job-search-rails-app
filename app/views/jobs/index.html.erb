<h2>
  <% if @user %>
  <%= @user.first_name %>'s
  <% else %>
  Available
  <% end %>
  Jobs
</h2>
<% @jobs.each do |job| %>
  <h4>
    <%= link_to job.title, job_path(job) %> |
    <%= job.company %> |
    <% if @user %>
      <%= link_to "Withdraw Application" %>
    <% end %>
  </h4>
<% end %>

<%= link_to "Create Job", new_job_path %>
